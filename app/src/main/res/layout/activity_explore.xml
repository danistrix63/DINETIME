<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Título de la sección -->

    <!-- Card 1: Muysca -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Explorar Restaurantes"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/card_restaurante1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_bg"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:layout_below="@id/title">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurante1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muysca"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrer del Clot, 135"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Botón Consultar -->
        <Button
            android:id="@+id/button_reservar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6A9728"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Card 2: Restaurante Sol -->
    <LinearLayout
        android:id="@+id/card_restaurante2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_bg"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        android:layout_below="@id/card_restaurante1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurante2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurante Sol"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrer del Clot, 127"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Botón Consultar -->
        <Button
            android:id="@+id/button_reservar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6A9728"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Card 3: La Taqueria -->
    <LinearLayout
        android:id="@+id/card_restaurante3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_bg"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"
        android:layout_below="@id/card_restaurante2">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurante3"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Taqueria"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carrer de Pujades, 172"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Botón Consultar -->
        <Button
            android:id="@+id/button_reservar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6A9728"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Botón para ver más reservas -->

    <!-- Bottom Navigation siempre abajo -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
