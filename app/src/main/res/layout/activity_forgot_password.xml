<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvide la contrase침a"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:layout_below="@id/titleText"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduzca su correo electronico"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_below="@id/emailLabel"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/rememberPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="te acuerdas de la contrase침a?"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesi칩n"
        android:textColor="#E67E22"
        android:textStyle="bold"
        android:layout_toRightOf="@id/rememberPasswordText"
        android:layout_alignBaseline="@id/rememberPasswordText" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restablecer la Contrase침a"
        android:backgroundTint="#6D752D"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginText"
        android:layout_marginTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

</RelativeLayout>
